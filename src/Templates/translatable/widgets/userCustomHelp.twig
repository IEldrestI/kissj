{% if userStatus == 'open' %}
    {% if userRole == 'pl' %}
        {% trans %}userCustomHelp.statusOpenPl{% endtrans %}
    {% else %}
        {% trans %}userCustomHelp.statusOpen{% endtrans %}
    {% endif %}
{% elseif userStatus == 'closed' %}
    {% if userRole == 'guest' %}
        {% trans %}userCustomHelp.statusClosedGuest{% endtrans %}{{ event.getContactEmail }}
    {% else %}
        {% trans %}userCustomHelp.statusClosed{% endtrans %}{{ event.getContactEmail }}
    {% endif %}
{% elseif userStatus == 'approved' %}
        {% trans %}userCustomHelp.statusApproved{% endtrans %}    
{% elseif userStatus == 'paid' %}
    {% if userRole == 'guest' %}
        {% trans %}userCustomHelp.statusPaidGuest{% endtrans %}    
    {% else %}
        {% trans %}userCustomHelp.statusPaid{% endtrans %}    
    {% endif %}
{% endif %}
